# Database (if using a database)
DATABASE_URL=postgresql://user:password@localhost:5432/sportstradex

# API Keys
NEXT_PUBLIC_API_BASE_URL=http://localhost:3001/api

# Third-party Services
NEXT_PUBLIC_GOOGLE_ANALYTICS_ID=
